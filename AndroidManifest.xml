        <activity
            android:name="com.crazyfish.activity.RegisterActivity"
            android:label="用户注册" >
        </activity>
        <activity
            android:name="com.crazyfish.activity.OtherLoginActivity"
            android:label="其他登录" >
        </activity>
        <activity
            android:name="com.crazyfish.activity.PostActivity"
            android:label="提交" >
        </activity>
        <activity
            android:name="com.crazyfish.activity.CustomerFansActivity"
            android:label="我的粉丝" >
        </activity>
        <activity
            android:name="com.crazyfish.activity.CustomerHomeActivity"
            android:label="我的粉丝" >
