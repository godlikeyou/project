<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almostwhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivUserUpload"
        style="@style/uploadpic"
        android:contentDescription="@string/post" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/content"
        android:textSize="17dp"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/ivGap"
            style="@style/userpic"
            android:contentDescription="@string/post" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="right" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/focus" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="5dp">

        <LinearLayout
            style="@style/actionbarline">

            <Button
                android:id="@+id/btnCollect"
                style="@style/actionbarbutton"
                android:background="@drawable/collbuttonstate" />

            <TextView
                android:id="@+id/tvCollNum"
                style="@style/actionbartext"
                android:text="3收藏" />
        </LinearLayout>

        <LinearLayout style="@style/verticalsplit"></LinearLayout>

        <LinearLayout
            style="@style/actionbarline">

            <Button
                android:id="@+id/btnGood"
                style="@style/actionbarbutton"
                android:background="@drawable/imagebuttonstate" />

            <TextView
                android:id="@+id/tvGoodNum"
                style="@style/actionbartext" />
        </LinearLayout>

        <LinearLayout style="@style/verticalsplit"></LinearLayout>

        <LinearLayout
            style="@style/actionbarline">

            <Button
                android:id="@+id/btnBad"
                style="@style/actionbarbutton"
                android:background="@drawable/badbuttonstate" />

            <TextView
                android:id="@+id/tvBadNum"
                style="@style/actionbartext"
                android:text="0差"/>
        </LinearLayout>

        <LinearLayout style="@style/verticalsplit"></LinearLayout>

        <LinearLayout
            style="@style/actionbarline">

            <Button
                android:id="@+id/btnRec"
                style="@style/actionbarbutton"
                android:background="@drawable/postbuttonstate" />

            <TextView
                android:id="@+id/tvRecNum"
                style="@style/actionbartext" />
        </LinearLayout>

        <LinearLayout style="@style/verticalsplit"></LinearLayout>

        <LinearLayout
            style="@style/actionbarline">

            <Button
                android:id="@+id/btnMore"
                style="@style/actionbarbutton"
                android:background="@drawable/morebuttonstate"/>

            <TextView
                style="@style/actionbartext"
                android:text="更多"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>